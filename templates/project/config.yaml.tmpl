server:
  port: 50051
  host: "0.0.0.0"
  graceful_shutdown_timeout: 30s

{{if .WithDB}}
database:
  host: "localhost"
  port: 5432
  user: "user"
  password: "password"
  name: "{{if .ProjectName}}{{.ProjectName}}{{else}}mydb{{end}}"
  sslmode: "disable"
  max_open_conns: 25
  max_idle_conns: 5
  conn_max_lifetime: 5m
{{end}}

logging:
  level: "info"
  format: "json"
  output: "stdout"

metrics:
  enabled: true
  port: 9090

tracing:
  enabled: false
  jaeger_endpoint: "http://localhost:14268/api/traces"

auth:
  jwt_secret: "your-jwt-secret-key-here"
  token_expiry: 24h

cache:
  enabled: false
  redis_host: "localhost:6379"
  redis_password: ""
  default_expiration: 10m

message_queue:
  enabled: false
  rabbitmq_url: "amqp://guest:guest@localhost:5672/"